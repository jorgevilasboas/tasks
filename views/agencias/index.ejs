<% include ../partials/header %> 

     <header class="jumbotron">
         <div class="container">
            <div class="row"> 
                <h2><p class="glyphicon glyphicon-calendar"></p> Agências</h2>
                <a class="btn btn-primary btn-lg" href="/agencias/new">Nova Agência</a>
             </div>
              <form action="/agencias" method="GET" class="form-inline" id="agencia-search">
                <div class="form-group">
                  <input type="hidden" name="search" placeholder="Pesquisar agência" class="form-control">
                </div>
              </form>             
         </div>
     </header>
     
     <div class="row text-center flex-wrap" id="agencia-grid">
        <% agencias.forEach(function(agencia){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= agencia.image %>">
                   <div class="caption">
                       <h4><%= agencia.name %></h4>
                   </div>
                   <p>
                       <a href="/agencias/<%= agencia._id %>" class="btn btn-primary">Visualizar</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>

<% include ../partials/footer %>
