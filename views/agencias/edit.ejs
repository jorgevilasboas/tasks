<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Edit <%= agencia.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/agencias/<%=agencia._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Nome</label>
                    <input class="form-control" type="text" name="name" id="name" value="<%= agencia.name %>">
                </div>
                <div class="form-group">
                    <label for="image">Url da Imagem</label>
                    <input class="form-control" type="text" name="image" id="image" title="Endereço da imagem"  value="<%= agencia.image %>" required>
                </div>                
                <div class="form-group">
                    <label for="location">Endereço</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= agencia.location %>">
                </div>
                <div class="form-group">
                    <label for="description">Descrição</label>
                    <input class="form-control" type="text" name="description" id="description" value="<%= agencia.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Alterar</button>
                </div>
            </form>
            <a href="/agencias/<%=agencia._id%>">Voltar</a>
        </div>
    </div>
<% include ../partials/footer %>

