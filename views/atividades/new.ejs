<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Cadastrar Atividade da Agência <%= agencia.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/agencias/<%= agencia._id %>/atividades" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="atividade[title]" placeholder="Título">
                </div>
                <div class="form-group">
                    <input class="form-control" type="datetime-local" name="atividade[start]" placeholder="Data Início">
                </div>
                <div class="form-group">
                    <input class="form-control" type="datetime-local" name="atividade[end]" placeholder="Data Fim">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="atividade[km]" placeholder="Quilometragem">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="atividade[car]" placeholder="Placa do carro">
                </div>
                <div class="form-group">
                        <select class="form-control" name="atividade[resource_type]">
                                <option value="D">Diária</option>
                                <option value="I">Indenização</option>                                
                        </select>
                        <input class="form-control" type="number" min="0" step="0.5" name="atividade[resource_value]" placeholder="Valor">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Cadastrar</button>
                </div>
            </form>
            <a href="/agencias">Voltar</a>
        </div>
    </div>
<% include ../partials/footer %>

